<Window x:Class="SPD1.Visualization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SPD1"
        mc:Ignorable="d"
        Title="Visualization" Height="720" Width="1280" ResizeMode="NoResize" Closed="Window_Closed">
    <ScrollViewer ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto">
        <Grid x:Name="GridControl">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="TopText" Margin="20" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center"/>

        </Grid>
    </ScrollViewer>
</Window>
